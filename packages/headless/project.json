{
  "name": "headless",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/headless/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/headless",
        "configFile": "packages/headless/vite.config.ts",
        "mode": "lib"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/headless/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {}
    },
    "version-publish": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "postTargets": ["headless:publish", "headless:push-to-github"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm publish",
        "cwd": "dist/packages/headless"
      }
    },
    "publish-using-plugin": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "packages/headless"
      }
    },
    "push-to-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "storybook-when-it-will-work": {
      "executor": "@nrwl/storybook:storybook",
      "options": {
        "uiFramework": "@storybook/html",
        "port": 4400,
        "configDir": "packages/headless/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "storybook dev",
        "cwd": "packages/headless"
      }
    },
    "build-storybook": {
      "executor": "@nrwl/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "uiFramework": "@storybook/html",
        "configDir": "packages/headless/.storybook",
        "outputDir": "dist/storybook/headless"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
