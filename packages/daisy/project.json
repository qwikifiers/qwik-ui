{
  "name": "daisy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/daisy/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/daisy",
        "configFile": "packages/daisy/vite.config.ts",
        "mode": "lib"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "test": {
      "executor": "@nrwl/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/daisy/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {}
    },
    "version-publish": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "noVerify": true,
        "push": true,
        "postTargets": ["daisy:publish", "daisy:push-to-github"]
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "distFolderPath": "packages/daisy"
      }
    },
    "push-to-github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    }
  },
  "tags": []
}
